<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:XamarinDemo.Controls;assembly=XamarinDemo"
             x:Class="Samples.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <Style x:Key="StartButtonStyle" TargetType="controls:BorderedButton">
                <Setter Property="NormalTextColor" Value="Blue" />
                <Setter Property="PressedTextColor" Value="White" />
                <Setter Property="NormalBackgroundColor" Value="White" />
                <Setter Property="PressedBackgroundColor" Value="Blue" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="BorderWidth" Value="2" />
                <Setter Property="BorderRadius" Value="25" />
                <Setter Property="BorderColor" Value="Blue" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>